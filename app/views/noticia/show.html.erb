
<!-- Page Content -->
    <div class="container">
			<br><br>
      <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
          <!-- Title -->
          <h1 class="mt-4"><%= @noticia.title %></h1>
          <!-- Author -->
          <p class="lead">
            Investiga
            <a href="#"><%= @noticia.author %></a>
          </p>
          <hr>
          <!-- Date/Time -->
          <p>Investiga <%= @noticia.publication_date %></p>
          <hr>
          <!-- Preview Image -->
          <%= image_tag(@noticia.image_url, :class =>"img-fluid")  %>
          <hr>
          <!-- Post Content -->
          <p class="lead"> <%= @noticia.description %></p>
          <hr>
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Comentario:</h5>
            <div class="card-body">
              <%= form_for @comment  do |f| %>
                <div class="card-body">
                  <div class="form-group">
                    <%= f.hidden_field :noticia_id %>
                    <%= f.text_area :description, rows: 4, class: "form-control" %>
                  </div>
                </div>
                <div class="card-footer text-right">
                  <%= f.submit :Listo, class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Single Comment -->
          <% @noticia.comments.each do |i|%>
            <div class="media mb-4">
              <div class="media-body">
                
              <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                <%= i.description %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4 sidebar">
          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Investigaciones</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-12">
                  <ul class="list-unstyled mb-0">
                    <% @noticias.each do |i| %>
                      <li>
                        <%= link_to i.title, noticium_path(i) %>
                      </li>
                      <hr>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container -->